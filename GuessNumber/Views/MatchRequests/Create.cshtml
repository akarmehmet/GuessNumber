@model GuessNumber.Models.MatchRequest

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="afterSend">

	<div class="row">
		<div class="col-4"></div>
		<div class="col-8">
			<h1>Find Best Opponent</h1>
		</div>
	</div>

	<div class="container">
		<div class="row pt-4">
			<div class="col-5"></div>
			<div class="col-7">
				<form asp-action="CreateMatch">
					<div class="form-group">
						<input type="submit" value="Play Game" class="btn btn-primary" id="submitBtn" />
					</div>
				</form>
			</div>
		</div>
	</div>
</div>





<div id="closeDiv" class="text-center" style="display:none">
	<br /> <br />  <br /> <br />
	<div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">  </div>
	<br /> <br />
	<strong>Finding Opponent...</strong>
</div>

<script>

	$("#submitBtn").click(function(){

		console.log('submitbtn clicked');
		$("#closeDiv").show();
		$(".afterSend").hide();
	});


</script>







