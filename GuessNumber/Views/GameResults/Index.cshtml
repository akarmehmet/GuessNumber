@model List<GuessNumber.ViewModels.LeaderBoardViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 >Top Players</h1>

<br />

<div>
    @if(ViewBag.Name != null)
    {
        <h3 class="text-dark text-black text-end">Player @ViewBag.Name total point is @ViewBag.TotalScore</h3>
    }

</div>
<br />


<table class="table">
    <thead>
        <tr>
            <th>Ranking</th>
            <th>
                @Html.DisplayNameFor(model => model[0].PlayerName)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model[0].TotalPoint)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
             @for (var i = 0; i < Model.Count; i++)
			{
				<tr>
					<td>@(i+1)</td>
					<td>
                        @Model[i].PlayerName
                    </td>
					<td>@Model[i].TotalPoint</td>
				</tr>
			}
        }
    </tbody>
</table>
