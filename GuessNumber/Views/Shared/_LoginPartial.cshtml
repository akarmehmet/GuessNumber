@using Microsoft.AspNetCore.Identity
@using GuessNumber.Areas.Identity.Data

@inject SignInManager<GuessNumberUser> SignInManager
@inject UserManager<GuessNumberUser> UserManager

<div class="row p-10 bg">
     @if (SignInManager.IsSignedIn(User))
    {
        <div class="col-6 ">
           
        </div>
      
        <div class="col-4 text-end">
            <h2 id="manage" class="nav-link text-dark"  title="Manage">Hello @UserManager.GetUserName(User)</h2>
        </div>
        <div class="col-2 text-end text-danger font-weight-bold">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link btn-primary  font-weight-bold">Logout</button>
            </form>
        </div>
    }
</div>


